@page
@model Project.Web.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Create Customer";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header">
                    <h4>Create New Customer</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="CustomerDto.FirstName" class="control-label"></label>
                            <input asp-for="CustomerDto.FirstName" class="form-control" />
                            <span asp-validation-for="CustomerDto.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CustomerDto.LastName" class="control-label"></label>
                            <input asp-for="CustomerDto.LastName" class="form-control" />
                            <span asp-validation-for="CustomerDto.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CustomerDto.Email" class="control-label"></label>
                            <input asp-for="CustomerDto.Email" class="form-control" />
                            <span asp-validation-for="CustomerDto.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CustomerDto.Region" class="control-label"></label>
                            <input asp-for="CustomerDto.Region" class="form-control" />
                            <span asp-validation-for="CustomerDto.Region" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CustomerDto.RegistrationDate" class="control-label"></label>
                            <input asp-for="CustomerDto.RegistrationDate" class="form-control" type="date" />
                            <span asp-validation-for="CustomerDto.RegistrationDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
