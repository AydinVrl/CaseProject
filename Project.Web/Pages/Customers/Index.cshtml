@page
@model Project.Web.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customers";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Customer Management</h2>
        <a asp-page="Create" class="btn btn-primary">Add New Customer</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Customer List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Region</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>@customer.FirstName @customer.LastName</td>
                                <td>@customer.Email</td>
                                <td>@customer.Region</td>
                                <td>@customer.RegistrationDate.ToString("d")</td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-info">Edit</a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@customer.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this customer?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
